/* pages/prize/prize.wxss */
@import '../../utils/font/iconfont.wxss';
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    /* text-align: center; */
}
.weui-navbar{
  background-color: #f5f5f5;
}


page {
background: #f5f5f5;
height: 100%;
}
.collect_list_box {
padding-top: 20rpx;
}
.recordList_box {
box-sizing: border-box;
/* background: #ffffff; */
}
.content_box {
/* border-top: 1rpx solid #dcdcdc; */
border-bottom: 1rpx solid #ececec;
position: relative;
}
.details{
  float: right;
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 38rpx;
  top: 41rpx;
  display: flex;
  align-items: center;
}
.ProductIco_box {
width: 130rpx;
height: 130rpx;
border-radius: 5px;
border: 1rpx solid #ececec;
margin-right: 18rpx;
float: left;
}
.ProductIco {
width: 100%;
height: 100%;
border-radius: 5px;
}
.view_ce {
width: 100%;
height: 130rpx;
position: relative;
padding-top: 20rpx;
padding-bottom: 30rpx;
/* background: red; */
/* border-bottom: 1rpx solid #ececec; */
}
.content_box_center {
width: 100%;
padding: 0rpx 20rpx 30rpx 20rpx;
padding-top: 20rpx;
/* margin-bottom: 30rpx; */
height: 182rpx;
z-index: 2;
/* background: #fff; */
position: absolute;
left: 0;
top: 0;
box-sizing: border-box;
border-bottom: 1rpx solid #ececec;
}
.view_content {
float: left;
width: 556rpx;
}
.view_title {
display: inline-block;
float: left;
width: 556rpx;
font-size: 39rpx;
color: #393939;
padding-top: 31rpx;
display: flex;
flex-direction: row;
}
.view_title_child1{
  height: 50rpx;
  width: 300rpx;
  font-size: 30rpx;
}
.view_title_child2{
  font-size: 28rpx;
  display: flex;
  align-items: flex-end
}
.view_content>text {
font-size: 32rpx;
color: #898989;
margin-right: 88rpx;
}
.view_btn_box>text {
font-size: 28rpx;
color: #f55212;
}
.view_btn {
width: 150rpx;
height: 44rpx;
border: 1px solid #cecece;
border-radius: 5px;
float: right;
font-size: 22rpx;
color: #898989;
line-height: 44rpx;
/* display: none; *//* margin-bottom: 5rpx; */
}
.view_text_center, .view_img_left, .view_img_right {
float: left;
}
.view_img_left, .view_img_right {
width: 44rpx;
height: 44rpx;
}
.view_img_left {
border-right: 1rpx solid #cecece;
}
.view_img_right {
border-left: 1rpx solid #cecece;
}
.view_text_center {
width: 58rpx;
height: 44rpx;
text-align: center;
line-height: 44rpx;
box-sizing: border-box;
font-size: 22rpx;
color: #898989;
}
.view_btn image {
width: 100%;
height: 100%;
}
.view_add {
width: 44rpx;
height: 44rpx;
border: 1px solid #cecece;
border-radius: 5px;
float: right;
font-size: 22rpx;
color: #898989;
line-height: 44rpx;
/* margin-bottom: 5rpx; */
}
.view_img_add {
width: 44rpx;
height: 44rpx;
}
.view_add image {
width: 100%;
height: 100%;
}
